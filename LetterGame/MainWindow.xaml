<Window x:Class="LetterGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LetterGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600" Background="#FFC2EABD">
    <Grid x:Name="Grid" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button x:Name="StartBtn" Content="START" FontSize="72" FontFamily="Segoe UI Black" Padding="40,20,40,20" Background="#FF011936" Foreground="#FFF9DC5C" BorderBrush="#FF011936" FontWeight="Normal" Click="StartGame" >
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>

    </Grid>
</Window>
